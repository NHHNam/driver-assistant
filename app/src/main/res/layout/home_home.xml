<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@color/light_blue">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Assistant"
            android:textColor="@color/white"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/inmgmap"
            android:src="@drawable/map"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imgpetrol"
            android:src="@drawable/petrol"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:fontFamily="@font/dancing"
            android:id="@+id/home_fragment_map"
            android:text="Map"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <TextView
            android:fontFamily="@font/dancing"
            android:id="@+id/list_petrol"
            android:text="Danh sách đổ xăng"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/imgdichvu"
            android:src="@drawable/dichvu"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imgnhienlieu"
            android:src="@drawable/resouces"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvdichvu"
            android:fontFamily="@font/dancing"
            android:text="Loại hình dịch vụ"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvnhienlieu"
            android:fontFamily="@font/dancing"
            android:text="Nhiên liệu"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgloaichi"
            android:src="@drawable/hoadon"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imgloaithunhap"
            android:src="@drawable/thunhap"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvloaichi"
            android:fontFamily="@font/dancing"
            android:text="Loại chi "
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvloaithunhap"
            android:fontFamily="@font/dancing"
            android:text="Loại thu nhập"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/bg_light"
        android:gravity="bottom">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/home_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/home_bottom_navigation"
            app:itemTextColor="@drawable/home_nav_items"
            app:itemIconTint="@drawable/home_nav_items"
            app:labelVisibilityMode="labeled"
            android:background="@color/white"/>

    </LinearLayout>

</LinearLayout>